
.com-box{
  position: absolute;
  left:0;top:0;
  width:100%;
  height:100%;
  z-index:9999;
}
.com-cover{
  width:100%;
  height:100%;
  background:rgba(100,100,100,0.6)
}
.com-content{
  width:76%;
  height:800rpx;
  background:#fff;
  position: absolute;
  left:12%;top:120rpx;
  border-radius:20rpx;
  z-index:99999;
}
.com-content>view:nth-of-type(1){
  height:90rpx;
  line-height:90rpx;
  text-align:center;
  color:#fff;
  background:#f90;
  border-radius: 20rpx 20rpx 0 0;
}
.com-content>view:nth-of-type(2){
  height: 96rpx;
  line-height: 32rpx;
  color: #f00;
  font-size: 24rpx;
  padding: 20rpx 30rpx;
  border-bottom:20rpx solid #f0f0f0;
}
.com-content>view:nth-of-type(3){
  color:#fff;
  position: absolute;
  width:70rpx;
  height:70rpx;
  line-height:70rpx;
  right:-25rpx;
  top:-25rpx;
  background:#dc8706;
  border-radius:50%;
  text-align: center;
}
.p-con{
  padding: 0 20rpx;
  background: #fff;
  max-height: 270px;
  overflow: auto;
  color:#666;
  font-size:28rpx;
}
.p-type{
  font-size: 28rpx;
  color: #f03732;
  line-height: 44rpx
}
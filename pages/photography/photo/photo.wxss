
.photo{
  margin-top:110rpx;
  background:#eee;
  padding:8rpx 0 100rpx;
}
.photo>view{
  padding:0 20rpx;
  margin-bottom:20rpx;
  background:#fff;
}
.type-nav{
  width:100%;
  height:80rpx;
  background:#FF9934;
  color:#fff;
  top:0;
  align-items: center;
}
.type-nav view{
  width:112rpx;
  height:100%;
  font-size:28rpx;
  text-align:center;
  position: relative;
  line-height:90rpx;
}
.type-nav view text{
  position: absolute; 
  display: block;
  height:4rpx;
  width:56rpx;
  background:#333;
  left:28rpx;
  bottom:0;
}
.nothing{
  padding:16rpx 0;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
  color:#666;
  background:#fafafa;
  text-align:center
}
.user-info{
  padding:14rpx 0;
}
.user-info image{
  width:80rpx;height:80rpx;
  border-radius:50%;
}
.user-info view{
  margin-left:20rpx;
  justify-content: space-between;
  flex-direction: column 
}
.user-info view text:nth-of-type(1){
  color:#F6873D;
  font-size:32rpx;
  font-weight:600;
}
.user-info view text:nth-of-type(2){
  color:#9D9D9D;
  font-size:24rpx;
}
.item-title{
  color:#5A5A5A;
  font-size:32rpx;
}
.item-img{
  padding:16rpx 0 10rpx;
  border-bottom:1px solid #eee;
}
.item-img image{
  margin:4rpx;
  width:224rpx;height:224rpx;
}

.item-cont{
  padding:10rpx 0;
  justify-content: space-around;
  font-size:26rpx;
  align-items:center;
}
.item-cont icon{
  font-size:34rpx;
  margin-top:-4rpx;
  margin-right:10rpx;
}
.item-cont view,.item-cont navigator{
  display: flex;
  align-items:center;
}
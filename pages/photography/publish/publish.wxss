.picture_list {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  margin: 10rpx;
  position: relative;
  width: 200rpx;
  height: 200rpx;
  font-size:140rpx;
  color:#eaeaea;
  text-align:center;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #000;
  color: #fff;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
}

.picture_item image {
  width: 100%;
  height: 100%;
}
.delBtn{
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height:34rpx;
  font-size:32rpx;
  color:#fff;
  position:absolute;
  right:0;top:0;
  background:#9A999B;
}
textarea{
  width:100%;
  font-size:28rpx;
  min-height:170rpx;
}

.label-list{
  padding:10rpx 30rpx;
  height:54rpx;
  border-top:10rpx solid #eee;
  border-bottom:1px solid #eee;
  align-items: center;
}
.label-list .labelBtn{
  width:110rpx;
  height:38rpx;
  text-align: center;
  line-height:38rpx;
  color:#ff9934;
  border:1px solid #ff9934;
  font-size:24rpx;
  border-radius:6rpx;
}
.label-list .label{
  font-size:20rpx;
  color:#ff9934;
  margin-left:30rpx;
}
.label-cover{
  position: absolute;
  top:0;left:0;
  width:100%;
  height:100%;
  z-index:99999;
  background:#fff;
}

.label-cover{
  text-align: center;
}
.cover-label-list{
  align-items: center;
  flex-wrap:wrap;
  padding:20rpx;
  justify-content: space-between;
  margin-bottom:100rpx;
}
.cover-label-list view{
  width:120rpx;height:50rpx;
  text-align: center;
  line-height:50rpx;
  font-size:28rpx;
  color:#666;
  border:1px solid #FF9934;
  border-radius:6rpx;
  margin-bottom:30rpx;
}
.label-cover .wancheng{
  display: inline-block;
  width:120rpx;
  height:50rpx;
  text-align: center;
  line-height:50rpx;
  font-size:28rpx;
  color:#666;
  border-radius:6rpx;
  background:#FFD101;
}

.operate{
  align-items: center;
  justify-content: center;
  margin-top:100rpx;
}
.operate view{
  width:120rpx;
  height:50rpx;
  text-align: center;
  line-height:50rpx;
  margin:30rpx;
  border-radius:6rpx;
  border:1px solid #ff9934;
  font-size:28rpx;
  color:#666;
}

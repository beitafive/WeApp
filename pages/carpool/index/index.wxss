/**index.wxss**/
@import '../../../components/loading/loading.wxss';
@import '../../../components/tips/tips.wxss';
.swiper{
  height:200rpx;
  width:100%;
}
.swiper-img{
  width:100%;
  height:200rpx;
}
.i-top{
  color:#f00;
  font-size:24rpx;
  padding:20rpx;
  height:40rpx;
  margin: 0;
  background:#fff;
  display: flex;
  align-items: center;
}
.i-top icon{
  font-size:36rpx;
  margin-right:10rpx;
  margin-top:-6rpx;
}
.i-top text{
    color: #45b5ff;
    margin-left: 10rpx;
    text-decoration: underline;
}

.search{
  box-sizing: border-box;
  width:100%;
  padding:0 20rpx;
  margin:30rpx 0 24rpx;
  position: relative;
  overflow: hidden
}


.cover{
  width:100%;
  height:140rpx;
  left:0;top:0;
  display: flex;
}
.cover-item{
  flex:1;
  height:100%;
  margin:0 20rpx;
}
.cover-item icon{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  color:#fff;
  text-align: center;
  line-height:110rpx;
  font-size:50rpx;
}
.cover-item view{
  color: #666;
  font-size: 24rpx;
  line-height:40rpx;
  text-align: center;
}

.s-input{
    padding: 20rpx;
    display: flex;
    background: #f5f5f5;
    font-size:28rpx;
}
.s-flex{
  align-content: center;
  background: #fff;
  display: flex;
  border: 1px solid #e2e2e2;
  border-radius: 10rpx 0 0 10rpx;
}
.s-flex input{
  padding-left:20rpx;
  height:66rpx;
  width:280rpx;
}
.s-input .sousuo{
    font-size: 42rpx;
    color: #999;
    border-radius: 0 5px 5px 0;
    border: 1px solid #e2e2e2;
    border-left: none;
    width: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.s-site{
   display:flex; 
  height: 80rpx;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
  background-color: #fff;
  color: #ccc;
  font-size:32rpx;
  border-bottom:1px solid #e2e2e2;
}
.s-site text{
  flex:1
}
.s-site button{
  width: 220rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  color: #999;
  padding:0;
  font-size:28rpx;
  text-align: center;
  line-height:48rpx;
}

.place{
  padding:30rpx 20rpx 10rpx;
}
.place-item{
  display: inline-block;
  background:#f5f5f5;
  margin-right: 4%;
  margin-bottom: 20rpx;
  border-radius:10rpx;
  text-align: center;
  line-height:60rpx;
  width:22%;
  height:60rpx;
  font-size:28rpx;
}
.place-item:nth-of-type(4n){
  margin-right:0;
}

.border-top{
  height:20rpx;
  width:100%;
  background:#f5f5f5;
}
.list{
  position:relative;
}
.list-data{
  padding:40rpx 20rpx 0;
  position: relative;
}
.types{
  width:92rpx;
  height:40rpx;
  color:#fff;
  position: absolute;
  top:45rpx;
  text-align: center;
  line-height:40rpx;
  border-radius:6rpx;
  font-size:24rpx;
  margin-top:3rpx;
  margin-right:14rpx;
}
.list-pl{
  display: inline-block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height:44rpx;
}
.passBy{
  color: #999;
  font-size: 28rpx;
  line-height:44rpx;
  margin-left:14rpx;
  display: block
}
.times,.remark,.desc{
  padding:20rpx;
}
.remark{
  padding-top:0;
}
.times text:nth-of-type(1){
    color: #666;
    font-size: 28rpx;
    font-weight: bold;
    margin-right: 4rpx;
    padding-left:20rpx;
    position: relative;
}
.times text:nth-of-type(1)::before{
  content:'';
  width: 4px;
  height: 4px;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -2px;
  border-radius: 50%;
  background: #ccc;
}
.times text:nth-of-type(2){
    color: #666;
    font-size: 28rpx;
    margin-right: 4rpx;
    padding-left:20rpx;
    position: relative;
}

.remark text{
    color: #666;
    font-size: 28rpx;
    margin-right: 4rpx;
    padding-left:20rpx;
    position: relative;
}
.remark text::before{
  content:'';
  width: 4px;
  height: 4px;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -2px;
  border-radius: 50%;
  background: #ccc;
}
.nothing{
  padding:16rpx 0;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
  color:#666;
  background:#fafafa;
  text-align:center
}
.desc{
  padding:20rpx;
  position: relative;
}
.desc::before{
  content:'';
  width:712rpx;
  height:2rpx;
  top:0;
  left:20rpx;
  position:absolute;
  background:#e2e2e2;

}
.desc text:nth-child(1){
    color: #666;
    font-size: 28rpx;
    margin-right: 4rpx;
    padding-left:20rpx;
    position: relative;
    
}
.desc text:nth-child(1)::before{
  content:'';
  width: 4px;
  height: 4px;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -2px;
  border-radius: 50%;
  background: #ccc;
}
.desc text:nth-child(2){
  font-size:24rpx;
  color:#ccc;
  margin-left:14rpx;
}
.desc button{
  float:right;
  width:118rpx;
  height:48rpx;
  padding:0;
  box-sizing: border-box;
  font-size:28rpx;
  line-height:48rpx;
  border: 1px solid #f90;
  border-radius:0;
}
button::after{
border: none;
}
.isGo{
  position: absolute;
  right:76rpx;
  bottom:74rpx;
  width:136rpx;
  height:92rpx;
}

.gotop{
  position: fixed;
  bottom: 140rpx;
  right: 20rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  padding-top: 20rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  z-index:9999;
  background: rgba(0,0,0,0.5)
}
.gotop image{
  width:36rpx;
  height:36rpx;
  display: block;
  margin:0 auto;
}

@import '../../../components/tips/tips.wxss';
.issue{
  background:#f0f0f0;
  border-top:30rpx solid #fff;
}
.issue .top-tips{
  background:#fff09d;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #bd7100;
  font-size: 28rpx;
}
.issue .check{
  margin-bottom: 20rpx;
  padding: 30rpx 0;
  justify-content: center;
  background-color: #fff;
}
.check button{
  width:184rpx;
  height:58rpx;
  line-height: 58rpx;
  background:#f90;
  color:#fff;
  border-radius:10rpx;
  font-size:32rpx;
}
.check view:nth-of-type(1){
  border-radius: 10rpx 0 0 10rpx;
  position: relative;
  border-right: 0;
  width: 184rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 32rpx;
  border:2rpx solid #f90;
  cursor: pointer;
}
.check view:nth-of-type(2){
  border-radius: 0 10rpx 10rpx 0;
  position: relative;
  border-right: 0;
  width: 184rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 32rpx;
  border:2rpx solid #f90;
  cursor: pointer;
}

.sue-input{
  background:#fff;
  border-bottom:1px solid #e5e5e5;
  font-size:32rpx;
  padding:26rpx 20rpx;
  align-items:center;
}
.sue-input text{
  color:#666;
}
.sue-input .must{
  color:red
}
.sue-input textarea{
  margin-top:20rpx;
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #f0f0f0;
  border-radius: 10rpx;
  resize: none;
}
.sue-input image{
  width:40rpx;
  height:40rpx;
}
.sue-input button{
  background:#f90;
  color:#fff;
}